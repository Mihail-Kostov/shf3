
function net/ipfw/spoof/revpath() {
  import net/ipfw
  local _v=${1:-0}
  local _if="${1:-in}"

  case "${_v}" in
    1|on|yes)
      net/ipfw/deny ${net_ipfw_spoof} log ip from any to any not verrevpath ${_if};;
  esac
}

function net/ipfw/spoof/nmap() {
  import net/ipfw
  local _v=${1:-0}
  local _if="${1:-in}"

  case "${_v}" in
    1|on|yes)
      net/ipfw/deny ${net_ipfw_nmap} log ip from any to any ipoptions rr,ts,ssrr,lsrr ${_if};;
  esac
}
