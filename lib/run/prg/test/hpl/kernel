
function run/prg/test/hpl/check() {
  # main input check
  run/check/main
  if test $? -gt 0 ; then
    return ${_false_}
  fi

  # common data check
  run/check/data
  if test $? -gt 0 ; then
    return ${_false_}
  fi
  return ${_true_}
}

function run/prg/test/hpl/finish() {
  return ${_true_}
}


function run/prg/test/hpl/save() {
  import run/save

  run/save
}

function run/prg/test/hpl/init() {
  import run/init

  run/init/main
  if test $? -gt 0 ; then
    msg "run/init/main failed"
    return ${_false_}
  fi

  # init data
  run/init/data
  if test $? -gt 0 ; then
    msg "run/init/data failed"
    return ${_false_}
  fi

  return ${_true_}
}
