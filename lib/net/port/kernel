function net/port() {
  import gui
  local _p=${1}
  local _forup=${2:-true}
  local _r=1
  local _o=""
  local _up=false
  local _i=0
  if test -z "${_p}" ; then
    return ${_false_}
  fi
  if ${_forup} ; then
    echo -n $(gui/txt " ${_no} [${gbn}] Waiting for port ${_p} UP" "yellow")
  else
    echo -n $(gui/txt " ${_no} [${gbn}] Waiting for port ${_p} DOWN" "yellow")
  fi
  while true ; do
    if test ${_i} -gt 60 ; then
      echo -e $(gui/txt "\n\n ${_no} [${gbn}] Timeout" "red")
      exit 1
    fi
    _i=$((_i+1))
    # state
    _o=$(netstat -a -n -p tcp | grep "\.${_p} ")
    # echo ${_o}
    if ! test -z "${_o}" ; then
      _up=true
    else
      _up=false
    fi

    if ${_forup} ; then
      if ${_up} ; then
        break
      else
        sleep 2
        echo -n "."
        continue
      fi
    else
      if ${_up} ; then
        sleep 2
        echo -n "."
        continue
      else
        break
      fi
    fi
  done
  echo $(gui/txt " done" "green")
  return ${_true_}
}

function net/port/down() {
  net/port ${1} false
}

function net/port/up() {
  net/port ${1} true
}

function net/port/test() {
  local _h="${1}"
  local _p=${2:-80}
  local _t="${3:-T}"
  if test -z "${_h}" ; then
    return ${_false_}
  fi
  if ! $(installed nmap) ; then
    return ${_false_}
  fi
  nmap -P0 -p ${_t}:${_p} ${_h} | grep ^${_p} | grep open &> /dev/null
  if test $? -gt 0 ; then
    return ${_false_}
  fi
  return ${_true_}
}

