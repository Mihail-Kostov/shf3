
function help/sys/mgr() {
  cat << EOF

System Manager

Usage: ${gbn} commands

Commands:
  ctl       - OS & kernel control

  pkg       - Package manager

  net       - Network manager

EOF
  $failure
}

function sys/mgr() {
  import sys

  local _cmd="${1:-help}"
  shift

  case "${_cmd}" in
    # submenus
    ctl|control|kernel)
      import sys/ctl
      sys/ctl $*
    ;;

    ser|service)
      import sys/ser
      sys/ser $*
    ;;

    pkg|package)
      import sys/pkg
      sys/pkg $*
    ;;

    net|network)
      import sys/net
      sys/net $*
    ;;

    *|help)
      help/sys/mgr
    ;;
  esac
}
