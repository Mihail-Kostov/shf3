#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import gui
import ssh

function sshto/help() {
  cat << EOF

SSH login

Usage: ${gbn} options
              -m MID
              -f - force
              -v - verbose
EOF
  exit ${_false_}
}

### args
_m=""
_f=false
_v=false
while getopts hfvm: o; do
  case "$o" in
    m) _m=$OPTARG;;
    f) _f=true;;
    v) gdbg=true;;
    h) sshto/help;;
    *) sshto/help;;
  esac
done

### main
echo
msg
gui/line 84

if test "${_m}" = "" ; then
  echo -n "[${gbn}] Enter MID: "
  read _m
fi

ssh/login "${_m}" ${_f}
