function help/sys/pkg() {
  import sys
  sys/help ${FUNCNAME} $*
  $failure
}

function sys/pkg() {
  local _cmd=${1:-help}
  shift

  echo
  msg "Package manager"
  gui/line

  case "${_cmd}" in
    info)
      sys/call sys/pkg info $*
    ;;

    in|install)
      sys/call sys/pkg install $*
    ;;

    se|search)
      sys/call sys/pkg search $*
    ;;

    *|help)
      help/sys/pkg
    ;;
  esac
}
