#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import gui
import ssh/ftp

function help/sshput() {
  cat << EOF

SSH login

Usage: ${gbn} options
              -m MID
              -s sources
              -t mode - transfer mode
              -v - verbose
EOF
  exit ${_false_}
}

### args
mid=""
src=""
_t=3
_v=false
while getopts hvm:s:t: o; do
  case "$o" in
    m) mid=$OPTARG;;
    s) src=$OPTARG;;
    t) _t=$OPTARG;;
    v) gdbg=true;;
    h|*) help/sshput;;
  esac
done

### main
echo
msg
gui/line

if test -r "./.${gbn}" ; then
  source "./.${gbn}"
fi

if test "${mid}" = "" ; then
  echo -n "[${gbn}] Enter MID: "
  read mid
fi

if test -z "${src}" ; then
  msg "Source not specified"
  exit ${_false_}
fi

PUT ${mid} "${src}"
