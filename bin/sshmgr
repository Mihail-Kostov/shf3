#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import gui
import ssh

function help/sshmgr() {
  cat << EOF

SSH MID Manager

Usage: ${gbn} options
              -n MID - create new
              -d MID - delete
              -e MID - edit
              -p MID - change private key password
              -i MID - show host info
              -c MID - connection check
              -g MID - download or update grid certificates
              -s MID - show public key
              -k - kill ssh agent
              -v - verbose
EOF
  exit ${_false_}
}

### args
_c="LIST"
_m=""
while getopts hvki:n:d:e:p:u:s:c: o; do
  case "$o" in
    k) _c="KILL";;
    d) _c="DELETE"; _m=$OPTARG;;
    n) _c="CREATE"; _m=$OPTARG;;
    i) _c="INFO";   _m=$OPTARG;;
    e) _c="EDIT";   _m=$OPTARG;;
    p) _c="PASS";   _m=$OPTARG;;
    c) _c="CHECK";  _m=$OPTARG;;
    g) _c="GRID";   _m=$OPTARG;;
    s) _c="PUBKEY"; _m=$OPTARG;;
    v) gdbg=true;;
    h|*) help/sshmgr;;
  esac
done

### main
echo
msg
gui/line

case "${_c}" in
  KILL)
    _apid=$(ps ax | grep ssh-agent | awk '/\?\?/{print $1}')
    if test "${_apid}" != "" ; then
      msg "Stopping ssh-agent (${_apid})"
      kill ${_apid}
    fi
    ;;
  LIST)
    ssh/mgr "${_c}"
    ;;
  INFO|CHECK|CREATE|DELETE|EDIT|PASS|GRID|PUBKEY)
    ssh/mgr "${_c}" "${_m}"
    ;;
esac
