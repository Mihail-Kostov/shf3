#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import ssh

function sshmgr/help() {
  cat << EOF

SSH MID Manager

Usage: ${gbn} options
              -n MID - new
              -d MID - delete
              -i MID - info
              -k - kill ssh agent
EOF
  exit ${_false_}
}

### args
_c="LIST"
_m=""
while getopts hki:n:d: o; do
  case "$o" in
    k) _c="KILL";;
    d) _c="DELETE"; _m=$OPTARG;;
    n) _c="CREATE"; _m=$OPTARG;;
    i) _c="INFO"; _m=$OPTARG;;
    h) sshmgr/help;;
    *) sshmgr/help;;
  esac
done

### main
case "${_c}" in
  KILL)
    _apid=$(ps ax | grep ssh-agent | awk '/\?\?/{print $1}')
    if test "${_apid}" != "" ; then
      msg "Stopping ssh-agent (${_apid})"
      kill ${_apid}
    fi
    ;;
  LIST)
    ssh/mgr "${_c}"
    ;;
  INFO|CREATE|DELETE)
    ssh/mgr "${_c}" "${_m}"
    ;;
esac
