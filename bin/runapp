#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header

function help/runapp() {
  cat << EOF

OS X Application (.app) wrapper

Usage: ${gbn} Command.app

EOF
  exit 1
}

if test $# -lt 1 ; then
  help/runapp
fi

if test $1 = "-h" || \
   test $1 = "help" ; then
  help/runapp
fi

_app=$1
shift

import sys

_os=$(sys/os)

if ! test -x "${_app}" ; then
  msg "Application not found: ${_app}"
  exit 1
fi

if test "${_os}" = "linux" ; then
  _exe="${_app}"
else
  _exe=${_app%%.app}
  _exe="${_app}/Contents/MacOS/${_exe}"
fi

if ! test -x "${_exe}" ; then
  msg "Application not found: ${_exe}"
  exit 1
fi

exec ${_exe} $*
