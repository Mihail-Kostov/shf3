#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import gui
import ssh

function help/sshto() {
  cat << EOF

SSH login

Usage: ${gbn} options
              -m MID
              -f - force
              -v - verbose
              -x CMD
              -l LINK
EOF
  exit ${_false_}
}

### args
_m=""
_f=false
_v=false
_x=""
_l=""
while getopts hfvl:m:x: o; do
  case "$o" in
    m) _m=$OPTARG;;
    x) _x=$OPTARG;;
    f) _f=true;;
    v) gdbg=true;;
    l) _l=$OPTARG;;
    h|*) help/sshto;;
  esac
done

### main
echo
# msg
# gui/line

if test "${_m}" = "" ; then
  echo -n "[${gbn}] Enter MID: "
  read _m
fi

if ! test -z "${_x}" ; then
  ssh/cmd "${_m}" "${_x}"
  exit $?
fi

ssh/login "${_m}" ${_f} "${_l}"
