#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import sys/dir

function help/dirsync() {
  cat << EOF

Directory synchronizer

Usage: ${gbn} source destination
EOF
  exit ${_false_}
}

### args
if test "${1}" = "-h" || \
   test $# -eq 0; then
  help/dirsync
fi

_src="${1}"
_dst="${2}"

echo
msg "${gbn}"
gui/line

sys/dir/sync "${_src}" "${_dst}" "-av --progress"
