function help/sys/pkg() {
  import sys
  sys/help ${FUNCNAME} $*
  $failure
}

### zypper interface
# repos|lr      - repo list
# refresh|ref   - refresh repos (update,selfupdate)
# addrepo|ar    - add repo
# removerepo|rr - remove repo
# install|in
# remove|rm
# list-updates|lu
# update|up     - update(upgrade)
# search|se
# info|if

function sys/pkg() {
  local _cmd=${1:-help}
  shift

  echo
  msg "Package Manager"
  gui/line

  case "${_cmd}" in
    if|info)
      sys/call sys/pkg info $*
    ;;

    in|install)
      sys/call sys/pkg install $*
    ;;

    se|search)
      sys/call sys/pkg search $*
    ;;

    *|help)
      help/sys/pkg
    ;;
  esac
}
