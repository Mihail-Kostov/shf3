#!/bin/bash
source $(dirname ${BASH_SOURCE})/../../lib/header
import net/tor
impoer net/tor/pchains
import net/port
import sql
import gui

function tank/usage() {
  echo "${gbn} [-p port] [-r]"
  exit ${_false_}
}

_k=false
_r=false
_q=false
_v=false
while getopts hp:kqvr o; do
  case "$o" in
    p) tor_exit_port=$OPTARG;;
    k) _k=true;;
    r) _r=true;;
    q) _q=true;;
    v) _v=true;;
    h) tank/usage;;
  esac
done

### exit
function tank/stop() {
  msg "${_no} Stopping..."
  ${tor_tkill} -n ${_no}

  for i in ${_log} ${_pchains_cfg} ${_privoxy_cfg} \
           ${_exit_ip} ${_texit} ${_pchains}; do
    if test -r "${i}" ; then
      rm -f "${i}"
    fi
  done
cat << EOF > "${tor_exit_id}"
EXIT_ID=${_no}
EOF
  exit 1
}
trap tank/stop INT TERM EXIT

### init
# id
_no=0
if test -r "${tor_exit_id}" ; then
  source "${tor_exit_id}"
  _no=${EXIT_ID}
fi
if ${_r} ; then
  _no=0
fi
cat << EOF > "${tor_exit_id}"
EXIT_ID=$((_no+1))
EOF
# port
_po=${tor_exit_port}
_po=$((_po+_no))

_log="./${gbn}.${_no}.log"
_child_pid=0


### main
${tor_tkill} -n ${_no}

_texit="${tor_texit}.${_no}"
_pchains="${tor_pchains}.${_no}"
link ${tor_texit} ${_texit}
link ${tor_pchains} ${_pchains}

### TODO
msg "${_no} Tank, I need an exit... Fast!"
echo > ${_log}

gui/title "TANK ${_no}"

_loop=true
while ${_loop} ; do
  net/port/down ${_po}
  sleep 1

  msg "${_no} Starting exit..."
  # start on prev node cfg
  if test ${_no} -gt 0 ; then
    _prev_no=$((_no-1))
    _prev_pchains_cfg="./${gbn}.${_prev_no}.pchains"
    if ${_v} ; then
      ${_pchains} -f ${_prev_pchains_cfg} ${_texit} -n ${_no} -p ${_po} &
    else
      ${_pchains} -f ${_prev_pchains_cfg} ${_texit} -n ${_no} -p ${_po} &> ${_log} &
    fi
  else
    if ${_v} ; then
      ${_texit} -n ${_no} -p ${_po} &
    else
      ${_texit} -n ${_no} -p ${_po} &> ${_log} &
    fi
  fi
  # TODO
  _child_pid=$!

  sleep 2
  net/port/up ${_po}

  _pchains_cfg="./${gbn}.${_no}.pchains"
  net/tor/pchains/cfg "${_pchains_cfg}" ${_po} ${_q}
  _privoxy_cfg="./${gbn}.${_no}.privoxy"
  net/tor/privoxy/cfg "${_privoxy_cfg}" ${_po} ${_q}

  msg "${_no} Testing..."
  net/tor/test "${_pchains}" "${_pchains_cfg}"
  local _ret=$?
  if ! test -r "${tor_texit}.${_no}.ip" ; then
    ${tor_tkill} -n ${_no}
    exit 1
  fi
  source "${tor_texit}.${_no}.ip"

  if test ${_ret} -gt 0 ; then
    msg $(gui/txt "red" " failed failed failed failed failed failed")
    ${tor_tkill} -n ${_no}
    _exit_ip=${EXIT_IP}
    sql/update "${_tor_exit_db}" "${_tor_exit_tb}" "er" "1" "ip='${_exit_ip}'"
    sleep 1
    _loop=true
  else
    _loop=false
  fi
done

gui/line
echo $(gui/txt "grn" " ${_no} [${gbn}] Found good exit $(cat ${_exit_ip})")
msg "${_no} Press Ctrl+C to shut down"
gui/line

exit 1
./viatank -x"./identme -m2"

if ${_kill} ; then
  ./torkill -n ${_no}
else
  tail -f "${_log}"
fi
