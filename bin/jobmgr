#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import que
import gui

function help/jobmgr() {
  cat << EOF

Queue Job Submitter

Usage: ${gbn} options
              -s jobfile - submitt
              -l jobfile - login
              -n - no check
              -v - verbose
EOF
  exit ${_false_}
}

### args
_j="batch.job"
_c="S"
_n=true
_v=false
while getopts hvns:l: o; do
  case "$o" in
    s) _c="S"; _j=$OPTARG;;
    l) _c="L"; _j=$OPTARG;;
    n) _n=false;;
    v) gdbg=true;;
    h|*) help/jobmgr;;
  esac
done

### main
_msg="Submit"
if test "${_c}" = "L" ; then
  _msg="Login"
fi
echo
msg "${_msg}"
gui/line

que/sub "${_c}" "${_j}" ${_n}
