#!/bin/bash

gbn=$(basename "${BASH_SOURCE}")

_e=0
_t=10
### args
while getopts he:t: o; do
  case "$o" in
    e) _e=$OPTARG;;
    t) _t=$OPTARG;;
    h|*) exit 1;;
  esac
done


### main
echo "${gbn} $$"

out=(CHG CHGCAR CONTCAR DOSCAR \
     EIGENVAL OSZICAR OUTCAR \
     PCDAT WAVECAR XDATCAR \
     vasprun.xml)

if test ${_t} -gt 0 ; then
  sleep ${_t}
fi

for i in ${out[@]} ; do
  echo ""
  echo "Generating ${i}"
  dd bs=1k count=1000 if=/dev/random of="${i}"
done

exit ${_e}
