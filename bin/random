#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import rnd/net

function help/random() {
  cat << EOF

Random generator

Usage: ${gbn} options
              -s - string
              -i - integer
              -l length
              -q - quite
EOF
  exit ${_false_}
}

### args
_m=0
_l=12
_q=true
while getopts hvl:qsi o; do
  case "$o" in
    l) _l=$OPTARG;;
    s) _m=0;;
    i) _m=1;;
    q) _q=false;;
    h) random/help;;
    v) gdbg=true;;
    *) random/help;;
  esac
done

### main
if ! $(rnd/net/test) ; then
  msg "Network failure"
  exit ${_false_}
fi
if test ${_m} -eq 1 ; then
  rnd/net/int ${_l} 1 100
else
  rnd/net/str ${_l} ${_q}
fi
