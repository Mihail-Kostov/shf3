#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import gui
import enc/pass

function help/passmgr() {
  cat << EOF

Random password manager for the console

Usage: ${gbn} options
              -l length
              -f database
              -t table
              -u uid - retrieve
              -c uid - change
              -n uid - new
              -d uid - delete
EOF
  exit ${_false_}
}

### args
_l=21
_u=""
_m="LIST"
_f=""
_t=""
_a=""
while getopts hf:t:a:l:p:n:d:u:v o; do
  case "$o" in
    f) _f=$OPTARG;;
    t) _t=$OPTARG;;
    a) _a=$OPTARG;;
    l) _l=$OPTARG;;
    u) _u=$OPTARG;;
    p) _m="CHANGE"; _u=$OPTARG;;
    n) _m="CREATE"; _u=$OPTARG;;
    d) _m="DELETE"; _u=$OPTARG;;
    v) gdbg=true;;
    h|*) help/passmgr;;
  esac
done

### main
echo
msg
gui/line

enc_pass_db="${grd}/sql/${enc_pass_db}"

# overrides
if ! test -z "${_f}" ; then
  enc_pass_db="${_f}"
fi
if ! test -z "${_t}" ; then
  enc_pass_tb="${_t}"
fi
if ! test -z "${_a}" ; then
  enc_pass_acc="${_a}"
fi

enc/pass/mgr "${_m}" ${_l} "${_u}"
