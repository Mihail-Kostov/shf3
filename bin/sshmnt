#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import gui
import ssh/mnt

function help/sshmnt() {
  cat << EOF

SSH Mount

Usage: ${gbn} options
              -m MID - mount
              -u MID - unmount
              -k MID - kill mount process
              -l - list
              -f - force
              -v - verbose
EOF
  exit ${_false_}
}

### args
_m=""
_f=false
_c="LIST"
while getopts hfvlk:m:u: o; do
  case "$o" in
    m) _c="MOUNT"; _m=$OPTARG;;
    u) _c="UNMOUNT"; _m=$OPTARG;;
    k) _c="KILL"; _m=$OPTARG;;
    l) _c="LIST";;
    f) _f=true;;
    v) gdbg=true;;
    h|*) help/sshmnt;;
  esac
done

### main
echo
msg
gui/line

if test "${_m}" = "" ; then
  _c="LIST"
fi

case ${_c} in
  LIST)
    ssh/mnt/ls
    ;;
  MOUNT)
    ssh/mnt "${_m}" ${_f}
    ;;
  UNMOUNT)
    ssh/umnt "${_m}" ${_f}
    ;;
  KILL)
    ssh/mnt/kill "${_m}"
    ;;
esac
