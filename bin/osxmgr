#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import gui
import sys/osx

function help/osxmgr() {
  cat << EOF

OS X Net Manager

Usage: ${gbn} options
              -l location - set locations
              -a state - airport
EOF
  exit ${_false_}
}

### args
_m="LOCATION"
_f=""
_l=""
while getopts hvl:a:s o; do
  case "$o" in
    l) _m="LOCATION"; _l=$OPTARG;;
    a) _m="AIRPORT"; _l=$OPTARG;;
    s) _m="SCAN";;
    v) gdbg=true;;
    h|*) help/osxmgr;;
  esac
done

### main
echo
msg
gui/line

case "${_m}" in
  LOCATION)
    sys/osx/location "${_l}"
  ;;
  AIRPORT)
    sys/osx/airport "${_l}"
  ;;
  SCAN)
    sys/osx/scan
  ;;
esac
