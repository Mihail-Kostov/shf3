#!/bin/bash
source $(dirname ${BASH_SOURCE})/../lib/header
import gui
import sys/dir

function help/dirperm() {
  cat << EOF

Usage: ${gbn} directory

EOF
  exit ${_false_}
}

### args
if test $# -lt 1 || \
   test "${1}" = "-h" ; then
  help/dirperm
fi

_d="${1:-.}"

### main
echo
msg "Permissions on Directory: ${PWD}"
gui/line

sys/dir/perm "${_d}"
